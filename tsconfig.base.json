{
  "compilerOptions": {
    // Type Checking
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "useUnknownInCatchVariables": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "exactOptionalPropertyTypes": false, // Consider true for stricter checks
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": false, // Consider true for stricter checks
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,

    // Modules
    "module": "ESNext",
    "moduleResolution": "Bundler", // Or "NodeNext" if preferred, "Bundler" is often better for modern setups
    "baseUrl": ".", // Set base URL for path aliases
    "resolveJsonModule": true,

    // Emit
    "declaration": true, // Generate .d.ts files
    "sourceMap": true, // Generate sourcemaps
    "declarationMap": true, // Generate sourcemaps for .d.ts files
    "inlineSources": true, // Include source code in sourcemaps
    "outDir": "dist", // Default output directory (can be overridden)
    "removeComments": false, // Keep comments in output

    // Interop Constraints
    "isolatedModules": true, // Ensure files can be transpiled independently
    "allowSyntheticDefaultImports": true, // Allow default imports from modules with no default export
    "esModuleInterop": true, // Emit __importStar and __importDefault helpers
    "forceConsistentCasingInFileNames": true,

    // Language and Environment
    "target": "ES2022", // Target modern JavaScript
    "lib": ["ES2022", "DOM", "DOM.Iterable"], // Include necessary libraries
    "skipLibCheck": true, // Skip type checking of declaration files

    // JSX
    "jsx": "react-jsx" // Use modern JSX transform
  },
  "exclude": ["node_modules", "dist", "build", ".turbo"]
}